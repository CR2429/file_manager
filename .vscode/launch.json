{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend (Nodemon)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/backend/src/server.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",

            "cwd": "${workspaceFolder}/backend",

            "env": {
                "NODE_ENV": "development"
            },

            "envFile": "${workspaceFolder}/backend/.env",

            "runtimeArgs": [
                "--watch",
                "${workspaceFolder}/backend/src",
                "--signal", "SIGTERM"
            ],

            "skipFiles": [
                "<node_internals>/**"
            ]
        },

        {
            "name": "Frontend (Vite)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/frontend/node_modules/vite/bin/vite.js",
            "args": ["dev"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",

            "cwd": "${workspaceFolder}/frontend",

            "env": {
                "NODE_ENV": "development"
            },

            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],

    "compounds": [
        {
            "name": "Start ALL (Backend + Frontend)",
            "configurations": [
                "Backend (Nodemon)",
                "Frontend (Vite)"
            ],
            "stopAll": true
        }
    ]
}
